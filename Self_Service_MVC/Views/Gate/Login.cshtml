@{
    ViewData["Title"] = "自门户首页";
}

@using Self_Service_MVC.Models
@model UserInfo

@section Scripts{
    <script src="~/js/site.js"></script>
}

<div class="modal fade bs-example-modal-sm" id="myModal" role="dialog" aria-label="myModallabel" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center">
                <p class="modal-title"><h4>登录到账户管理门户</h4></p>
            </div>
            <form id="checkform" name="checkform" method="post">

                <div class="modal-body">
                    <div class="form-group" style="text-align: center">
                        <img src="~/images/user1.jpg" class="img-rounded">
                    </div>
                    <div class="form-group has-feedback">
                        <p> 用户名：</p>
                        <span class="form-control-feedback"></span>
                        <input type="text" class="form-control" placeholder="输入用户名/手机号" asp-for="Username">
                    </div>
                    <div class="form-group has-feedback">
                        <p> 密码：</p>
                        <span class="form-control-feedback"></span>
                        <input type="password" class="form-control" placeholder="输入密码" asp-for="Password">
                    </div>
                    <a asp-controller="Gate" asp-action="Forgot">忘记密码了？</a>
                </div>
                <div class="modal-footer" style="text-align:center">
                    <button type="submit" class="btn btn-info btn-block" data-dismiss="modal" asp-controller="Backend" asp-action="BasicInfo">
                        登陆
                    </button>
                </div>
            </form>
        </div>
        </div>
</div>

